{{ 'hero-banner.css' | asset_url | stylesheet_tag }}
<section class="hero-banner">
  {% for block in section.blocks %}
    <div class="hero-slide" style="background-image:url({{ block.settings.slide_image | image_url: width: 1600 }});">
      <div class="hero-slide_content">
        <h1 class="hero-heading">{{ block.settings.heading }}</h1>
        <p class="hero-subheading">{{ block.settings.subheading }}</p>
        <a href="{{ block.settings.button_link }}" class="hero-button">
          {{ block.settings.button_label }}
        </a>
      </div>
    </div>
  {% endfor %}
</section>
{% schema %}
{
  "name": "Hero Banner",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "slide",
      "settings": [
        { "type": "image_picker", "id": "slide_image", "label": "Slide Image" },
        { "type": "text", "id": "heading", "label": "Heading", "default": "New Arrivals" },
        { "type": "text", "id": "subheading", "label": "Subheading", "default": "Discover our boutique collection" },
        { "type": "url", "id": "button_link", "label": "Button link" },
        { "type": "text", "id": "button_label", "label": "Button text", "default": "Shop Now" }
      ]
    }
  ],
  "max_blocks": 5
}
{% endschema %}
